<%= render "shared/crude/show", resource_name: "Product", resource: @product, resource_fields: [:name, :blank_name] do %>
  <%= render "shared/table", resources: @product.colors, resource_fields: [:name], resource_name: "Color" %>
  <%= render "shared/table", resources: @product.sizes, resource_fields: [:name], resource_name: "Size" %>
  <%= render "shared/table", resources: @product.price_ranges, resource_fields: [:from_quantity, :to_quantity, :price_cents, :lower_rrp_cents, :higher_rrp_cents, :commission], resource_name: "Price Range" %>
<% end %>
