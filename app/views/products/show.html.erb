<%= render "shared/crude/show", resource_name: "Product", resource: @resource, resource_fields: [:name, :currency, :blank_name, :custom_dye, :simple_configurator_product] do %>
  <%= render "shared/table", resources: @resource.colors, resource_fields: [:name, :hex, :pantone_code], resource_name: "Color" %>
  <%= render "shared/table", resources: @resource.sizes, resource_fields: [:name], resource_name: "Size" %>
  <%= render "shared/table", resources: @resource.price_ranges, resource_fields: [:from_quantity, :to_quantity, :commission], resource_name: "Price Range" %>
<% end %>
